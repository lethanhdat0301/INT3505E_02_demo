    "/api/v1/books": {
      "get": {
        "parameters": [
          {
            "default": 1,
            "description": "Trang hiện tại",
            "in": "query",
            "name": "page",
            "type": "integer"
          },
          {
            "default": 10,
            "description": "Số phần tử mỗi trang",
            "in": "query",
            "name": "per_page",
            "type": "integer"
          },
          {
            "description": "Tìm theo tên hoặc tác giả",
            "in": "query",
            "name": "search",
            "type": "string"
          },
          {
            "description": "Lọc theo thể loại",
            "in": "query",
            "name": "category",
            "type": "string"
          },
          {
            "description": "true = còn sách, false = đã mượn",
            "in": "query",
            "name": "available",
            "type": "boolean"
          },
          {
            "default": "title",
            "description": "Trường sắp xếp",
            "in": "query",
            "name": "sort_by",
            "type": "string"
          },
          {
            "default": "asc",
            "description": "Thứ tự",
            "enum": [
              "asc",
              "desc"
            ],
            "in": "query",
            "name": "order",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Danh sách sách có phân trang",
            "examples": {
              "application/json": {
                "data": {
                  "items": [
                    {
                      "author": "Mike",
                      "bookId": 1,
                      "category": "Lập trình",
                      "is_available": true,
                      "title": "Python 101"
                    }
                  ],
                  "pagination": {
                    "current_page": 1,
                    "has_next": true,
                    "has_prev": false,
                    "links": {
                      "first": "/api/v1/books?page=1",
                      "last": "/api/v1/books?page=5",
                      "next": "/api/v1/books?page=2",
                      "prev": null,
                      "self": "/api/v1/books?page=1"
                    },
                    "next_page": 2,
                    "per_page": 10,
                    "prev_page": null,
                    "total_items": 42,
                    "total_pages": 5
                  }
                },
                "meta": {
                  "message": "Showing 1-10 of 42 items",
                  "status": "success"
                }
              }
            }
          },
          "400": {
            "description": "Tham số phân trang không hợp lệ"
          }
        },
        "tags": [
          "Books"
        ]
      },
      "post": {
        "parameters": [
          {
            "in": "body",
            "name": "book",
            "required": true,
            "schema": {
              "properties": {
                "author": {
                  "description": "Tác giả",
                  "type": "string"
                },
                "category": {
                  "description": "Thể loại",
                  "type": "string"
                },
                "title": {
                  "description": "Tên sách",
                  "type": "string"
                }
              },
              "required": [
                "title"
              ],
              "type": "object"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Tạo sách thành công",
            "examples": {
              "application/json": {
                "author": "Mike",
                "bookId": 1,
                "category": "Lập trình",
                "is_available": true,
                "title": "Python 101"
              }
            }
          },
          "400": {
            "description": "Dữ liệu không hợp lệ"
          }
        },
        "tags": [
          "Books"
        ]
      }
    },
    "/api/v1/books/{book_id}": {
