            "name": "limit",
            "type": "integer"
          },
          {
            "description": "Cursor cho trang tiếp theo",
            "in": "query",
            "name": "cursor",
            "type": "string"
          },
          {
            "default": "next",
            "enum": [
              "next",
              "prev"
            ],
            "in": "query",
            "name": "direction",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Cursor pagination demo",
            "examples": {
              "application/json": {
                "data": {
                  "items": [
                    {
                      "author": "Author 1",
                      "id": 1,
                      "title": "Book 1"
                    }
                  ],
                  "pagination": {
                    "has_more": true,
                    "limit": 10,
                    "next_cursor": "1",
                    "prev_cursor": null,
                    "total_returned": 10
                  }
                },
                "meta": {
                  "message": "Retrieved 10 items",
                  "status": "success"
                }
              }
            }
          }
        },
        "summary": "Demonstrate cursor-based pagination for better performance on large datasets",
